@using PizzaAppDomain
@model Pizza
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>


<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.PizzaName</h5>
        <h6 class="card-subtitle mb-2 text-muted">Price:@Model.GetPrice(Model.Size)</h6>
        <p class="card-text">@Model.Description</p>
    </div>
</div>
