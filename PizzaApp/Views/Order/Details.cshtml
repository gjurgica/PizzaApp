@using PizzaAppDomain
@model Order
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>


<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Name: @Model.User.FirstName @Model.User.LastName</h5>
        <h6 class="card-subtitle mb-2 text-muted">Address: @Model.User.Address</h6>
        <p class="card-text">Phone: @Model.User.Phone</p>
    </div>
</div>

