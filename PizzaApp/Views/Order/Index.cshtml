@using PizzaAppDomain
@model List<Order>
@{
    ViewData["Title"] = "Index";
}

@foreach(Order order in Model)
{
<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h4 class="card-title">@order.User.FirstName @order.User.LastName</h4>
        @foreach (var pizza in order.Pizzas)
        {
            <h6 class="card-subtitle mb-2 text-muted">@pizza.Name - @pizza.GetPrice(pizza.Size)</h6>
        }
        <h5>Total price:@order.TotalPrice</h5>
        <a asp-action="Details" asp-controller="Order">Details</a> |
        <a asp-action="Edit" asp-controller="Order">Edit</a> |
        <a asp-action="Delete" asp-controller="Order">Delete</a>
    </div>
</div>
}
<br/>
<a asp-action="Create" asp-controller="Order" class="btn btn-primary">Create new order</a>

